    "@typescript-eslint/parser": "^5.60.1",
    "chai": "^4.3.10",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
