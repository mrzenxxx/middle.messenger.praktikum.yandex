{{#Dialog open=isOpen}}
{{#Form type="dialog"}}
    <h4>Удалить пользователя из чата</h4>
    {{{ FormField label="ID пользователя" name="remove_user_id" ref="removeUserID" isActive="true"}}}
    {{{ ApiErrorMessage }}}
    <div>
        {{{ Button
        label="Удалить"
        type="submit"
        style="primary"
        onClick=onRemoveUser
        }}}
        {{{ Button
        label="Отменить действие"
        type="button"
        style="secondary"
        onClick=onClose
        }}}
    </div>
{{/Form}}
{{/Dialog}}
