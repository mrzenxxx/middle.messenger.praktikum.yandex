<aside class="chat-sidebar">
    {{{ChatSearchBar}}}
    {{#>ChatList}}
        {{#>each chats}}
            {{!-- Сейчас рисует один пустой компонент (без данных) даже с пустым массивом или несуществующей переменной --}}
            {{{ChatBox
            header=this.title
            time=this.last_message.time
            content=this.last_message.content
            unread=this.unread_count
            }}}
        {{/each}}
    {{/ChatList}}
    {{{ChatSettingsBar}}}
</aside>
