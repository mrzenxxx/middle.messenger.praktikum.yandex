<div class="dialog__background">
{{#Dialog open=isOpen}}
<form method="dialog">
    <h4>Создать новую переписку</h4>
    {{{ FormField label="Название чата" name="chat_title" ref="chatTitle"}}}
    {{{ ErrorLine error=error ref="errorMessage"}}}
    <div>
        {{{ Button
        label="Cоздать"
        type="submit"
        style="primary"
        onClick=onSubmit
        }}}
        {{{ Button
        label="Отменить"
        type="button"
        style="secondary"
        onClick=onClose
        }}}
    </div>
</form>
{{/Dialog}}
</div>
