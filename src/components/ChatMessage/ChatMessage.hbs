<div class="chat-message__{{#if isOwn}}own__{{/if}}wrapper">
    <div class="chat-message{{#if isOwn}}__own{{/if}}">
        <div class="chat-message__info_wrapper">
            {{{Avatar size="xsmall" src=./author.avatar alt="Message author avatar picture"}}}
            <span class="chat-message__author">{{author}}</span>
            <span class="chat-message__separator"></span>
            <span class="chat-message__time">{{time}}</span>
        </div>
        <span class="chat-message{{#if isOwn}}__own{{/if}}__text">{{text}}</span>
    </div>
</div>
