<main class="messenger-page">
  {{{ChatSideBar chats=chats onClickProfileButton=switchToProfile onClickCreateChatButton=openDialog}}}
  {{#>ChatWindow}}
    {{>ChatHeader header = currentChat.header}}
      {{#>ChatFeed}}
      {{#each messages}}
        {{>ChatMessage
        author=this.author
        time=this.time
        text=this.content
        }}
      {{/each}}
      {{/ChatFeed}}
    {{{ChatMessageBar}}}
  {{/ChatWindow}}
  {{{DialogCreateChat ref=dialogCreateChat}}}
</main>
