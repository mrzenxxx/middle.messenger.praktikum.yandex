<main class="messenger-page">
  {{#>ChatList}}
    {{#each chats}}
      {{>ChatBox 
        header=this.title
        time=this.last_message.time
        content=this.last_message.content
        unread=this.unread_count
      }}
    {{/each}}
  {{/ChatList}}
  {{#>ChatWindow}}
  {{>ChatHeader header = currentChat.header}}
    {{#>ChatFeed}}
      {{#each messages}}
        {{>ChatMessage 
          author=this.author 
          time=this.time
          text=this.content
        }}
      {{/each}}
    {{/ChatFeed}}
    {{{ChatMessageBar}}}  
  {{/ChatWindow}}
  {{{DialogCreateChat}}}
</main>
