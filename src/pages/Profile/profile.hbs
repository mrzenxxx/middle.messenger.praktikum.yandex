<main class="profile">
    {{#>Form type="profile"}}
        {{>Avatar size="large" src=user.avatar}}
        <span class="profile__profile_name">
            {{user.display_name}}
        </span>
        <div class="profile__form_fields">
            {{>FormField label='Почта' name='email' value=user.email style="profile"}}
            {{>FormField label='Логин' name='login' value=user.login style="profile"}}
            {{>FormField label='Имя' name='first_name' value=user.first_name style="profile"}}
            {{>FormField label='Фамилия' name='second_name' value=user.second_name style="profile"}}
            {{>FormField label='Имя в чате' name='display_name' value=user.display_name style="profile"}}
            {{>FormField label='Телефон' name="phone" type="phone" value=user.phone style="profile"}}
        </div>
        <div class="{{className}}__buttons_wrapper">
            {{{Button label = "Изменить данные" type="secondary"}}}
            {{{Button label = "Изменить пароль" type="secondary"}}}
            {{{Button label = "Выйти" type="danger"}}}
        <div>
    {{/Form}}
</main>
